<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="10dp" app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/ll_product"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="78.3dp"
                android:layout_height="78.3dp"
                android:background="@color/gray_400"/>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:background="@color/gray_400"/>

                <View
                    android:layout_marginTop="6dp"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@color/gray_400"/>

                <View
                    android:layout_marginTop="6dp"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@color/gray_400"/>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingStart="11.7dp"
                android:paddingTop="3.3dp"
                android:paddingEnd="11.7dp"
                android:paddingBottom="3.3dp"
                android:text="In Stock"
                android:textSize="13.3sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_add_to_cart"
                android:visibility="visible"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_gray"
                android:elevation="14dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                >


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>
